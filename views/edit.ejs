<% layout('boilerplate') -%>

<body class="container-fluid p-0">
    <div class="row mt-5">
        <div class="container text-dark shadow bg-body rounded mt-5 col-4 offset-4">
            <h3 class="text-center my-4"><%=task.name%></h3>
            <form action="/<%=task._id%>?_method=put" method="post">
                <div class="row mx-3">
                    <label for="name" class="col-4"> <h5>Name</h5></label>
                    <input type="text" class="col rounded bg-light border-0 shadow-sm" name="name" value="<%=task.name%>" required id="name">
                    <button class="btn btn-primary mt-4 mb-4">Edit</button>    
                </div>
            </form>
        </div>
    </div>
    <div class="d-flex justify-content-center mt-5">
        <form action="/" method="get" >
            <button id="back" class="btn btn-secondary">Back</button>
        </form>
    </div>
    
</body>
